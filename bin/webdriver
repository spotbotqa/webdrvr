#!/usr/bin/env node

var path = require('path');
var spawn = require('child_process').spawn;
var webdriver = require(path.join(__dirname, '..', 'lib', 'index.js'));
var args = webdriver.execArgs.concat(process.argv.slice(2));

var childProcess = spawn(
  webdriver.execFile,
  args, {
    stdio: 'inherit'
  }
);

process.on('SIGTERM', function() {
  childProcess.kill('SIGTERM')
  process.exit(1)
});
